<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
>
    <TextView
 	android:text="@string/config_description"
 	android:gravity="center"
 	android:textStyle="bold"
	android:textSize="16sp"
 	android:layout_gravity="center"
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content" />
    
    
 <TextView
 	android:text="@string/config_user_name"
 	android:gravity="center"
 	android:textStyle="bold"
	android:textSize="16sp"
 	android:layout_gravity="center"
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content" />
  
 <EditText
	android:id="@+id/id_config_user_name"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:maxLength="16"
	android:maxLines="1"
	android:gravity="center"/>
 
 <TextView
 android:text="@string/config_user_pw"
 android:gravity="center"
 android:textStyle="bold"
 android:textSize="16sp"
 android:layout_gravity="center"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content" />
  
 <EditText
      android:id="@+id/id_config_user_pw"
      android:inputType="textPassword" 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
    />
  
 <Button
      android:id="@+id/id_confirm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/config_confirm" />
 </LinearLayout>
